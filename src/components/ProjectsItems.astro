---

interface Props {
    date: string | number
    title: string
    description?: string
    tags?: string[] 
    link?: string
    image?:string
}

const {date, title, description, tags, image, link } = Astro.props

---

<ol class="items-center sm:flex">
    <li class="relative mb-6 sm:mb-0">
        <div class="flex items-center">
            <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-700/10 sm:ring-8 dark:ring-gray-900 shrink-0">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-badge-right"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M13 7h-6l4 5l-4 5h6l4 -5z" /></svg>
            </div>
            <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700 mr-8"></div>
        </div>
        <div class="mt-3 sm:pe-8">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white hover:text-green-300/70 cursor-pointer">{title}</h3>
            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>
            <p class="text-base font-normal text-gray-500 dark:text-gray-400">{description}</p>
            <!-- <ul class="text-base font-normal text-gray-500 dark:text-gray-400"> 
                {  
                    tags?.map( (tag) => (
                        <li>{tag}</li>
                    ))
                }
            </ul> -->
            <a href={link} target="_blank">
                <img class="rounded shadow-2xl shadow-white/10 mt-3" src={image} alt={`imagen del proyecto ${title}`} />
            </a>
        </div>
    </li>
</ol>

